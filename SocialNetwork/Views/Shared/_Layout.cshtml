@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject SocialNetwork.Services.ICurrentTime CurrentTime

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                <ul class="nav navbar-nav">
                    <li><a href="~/Home/Index" class="navbar-brand">@Localizer["MyPage"]</a></li>
                    <li><a href="~/Home/Users" class="navbar-brand">@Localizer["Users"]</a></li>
                    @await Component.InvokeAsync("MenuParts")
                    <li><a href="~/Account/Register" class="navbar-brand">@Localizer["Register"]</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2019 - Social Network. Текущее время: @CurrentTime.GetTime</p>
        </footer>
        <Contacts></Contacts>
    </div>
</body>
</html>